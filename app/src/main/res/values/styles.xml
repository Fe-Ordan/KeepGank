<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryDark">@color/app_main_color</item>
        <item name="colorAccent">@color/app_main_color</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--供SipeBackActivity使用-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <!-- 设置Toolbar 中的Spinner样式-->
    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">
            @color/primary_text_default_material_light
        </item>
    </style>

    <style name="WebTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/web_background</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:label"></item>
    </style>

    <style name="MyPreferenceTheme" parent="WebTheme">
        <item name="preferenceTheme">@style/MaterialPreferenceTheme</item>
        <item name="android:preferenceStyle">@style/Preference.Material</item>
    </style>

    <style name="PhotoActivity" parent="WebTheme">
    </style>

    <style name="MaterialPreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarFadeDuration">1</item>
        <item name="android:background">@color/normal_background</item>
        <item name="android:textColorPrimary">@color/normal_text_color</item>
        <item name="android:textColorSecondary">@color/normal_text_color_second</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ffff8d</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#99ffffff</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AdapterView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">

    </style>

    <style name="AdapterItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_normal</item>
        <item name="android:paddingRight">@dimen/space_normal</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>


    <style name="ViewerThemeBase" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ViewerTheme" parent="ViewerThemeBase"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/normal_background</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle
        </item> <!--新增一个item，用于控制menu-->
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>

</resources>
